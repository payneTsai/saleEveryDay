<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="io.renren.modules.base.dao.ChanceDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="io.renren.modules.base.entity.ChanceEntity" id="chanceMap">
        <result property="chanceId" column="chance_id"/>
        <result property="empId" column="emp_id"/>
        <result property="customerId" column="customer_id"/>
        <result property="productId" column="product_id"/>
        <result property="chanceStatus" column="chance_status"/>
        <result property="chanceName" column="chance_name"/>
        <result property="gmtCreate" column="gmt_create"/>
        <result property="gmtModified" column="gmt_modified"/>
    </resultMap>

	<select id="queryObject" resultType="io.renren.modules.base.entity.ChanceEntity">
		select * from chance where chance_id = #{value}
	</select>

	<select id="queryList" resultType="io.renren.modules.base.entity.ChanceEntity">
		select * from chance
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by chance_id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from chance 
	</select>
	 
	<insert id="save" parameterType="io.renren.modules.base.entity.ChanceEntity" useGeneratedKeys="true" keyProperty="chanceId">
		insert into chance
		(
			`emp_id`, 
			`customer_id`, 
			`product_id`, 
			`chance_status`, 
			`chance_name`, 
			`gmt_create`, 
			`gmt_modified`
		)
		values
		(
			#{empId}, 
			#{customerId}, 
			#{productId}, 
			#{chanceStatus}, 
			#{chanceName}, 
			#{gmtCreate}, 
			#{gmtModified}
		)
	</insert>
	 
	<update id="update" parameterType="io.renren.modules.base.entity.ChanceEntity">
		update chance 
		<set>
			<if test="empId != null">`emp_id` = #{empId}, </if>
			<if test="customerId != null">`customer_id` = #{customerId}, </if>
			<if test="productId != null">`product_id` = #{productId}, </if>
			<if test="chanceStatus != null">`chance_status` = #{chanceStatus}, </if>
			<if test="chanceName != null">`chance_name` = #{chanceName}, </if>
			<if test="gmtCreate != null">`gmt_create` = #{gmtCreate}, </if>
			<if test="gmtModified != null">`gmt_modified` = #{gmtModified}</if>
		</set>
		where chance_id = #{chanceId}
	</update>
	
	<delete id="delete">
		delete from chance where chance_id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from chance where chance_id in 
		<foreach item="chanceId" collection="array" open="(" separator="," close=")">
			#{chanceId}
		</foreach>
	</delete>

</mapper>