<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="io.renren.modules.base.dao.ContDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="io.renren.modules.base.entity.ContEntity" id="contMap">
        <result property="contId" column="cont_id"/>
        <result property="customerId" column="customer_id"/>
        <result property="empId" column="emp_id"/>
        <result property="contName" column="cont_name"/>
        <result property="theme" column="theme"/>
        <result property="contStatus" column="cont_status"/>
        <result property="transactionMoney" column="transaction_money"/>
        <result property="gmtCreate" column="gmt_create"/>
        <result property="gmtModified" column="gmt_modified"/>
    </resultMap>

	<select id="queryObject" resultType="io.renren.modules.base.entity.ContEntity">
		select * from cont where cont_id = #{value}
	</select>

	<select id="queryList" resultType="io.renren.modules.base.entity.ContEntity">
		select * from cont
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by cont_id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from cont 
	</select>
	 
	<insert id="save" parameterType="io.renren.modules.base.entity.ContEntity" useGeneratedKeys="true" keyProperty="contId">
		insert into cont
		(
			`customer_id`, 
			`emp_id`, 
			`cont_name`, 
			`theme`, 
			`cont_status`, 
			`transaction_money`, 
			`gmt_create`, 
			`gmt_modified`
		)
		values
		(
			#{customerId}, 
			#{empId}, 
			#{contName}, 
			#{theme}, 
			#{contStatus}, 
			#{transactionMoney}, 
			#{gmtCreate}, 
			#{gmtModified}
		)
	</insert>
	 
	<update id="update" parameterType="io.renren.modules.base.entity.ContEntity">
		update cont 
		<set>
			<if test="customerId != null">`customer_id` = #{customerId}, </if>
			<if test="empId != null">`emp_id` = #{empId}, </if>
			<if test="contName != null">`cont_name` = #{contName}, </if>
			<if test="theme != null">`theme` = #{theme}, </if>
			<if test="contStatus != null">`cont_status` = #{contStatus}, </if>
			<if test="transactionMoney != null">`transaction_money` = #{transactionMoney}, </if>
			<if test="gmtCreate != null">`gmt_create` = #{gmtCreate}, </if>
			<if test="gmtModified != null">`gmt_modified` = #{gmtModified}</if>
		</set>
		where cont_id = #{contId}
	</update>
	
	<delete id="delete">
		delete from cont where cont_id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from cont where cont_id in 
		<foreach item="contId" collection="array" open="(" separator="," close=")">
			#{contId}
		</foreach>
	</delete>

</mapper>